<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blu_bg_gray">

    <View
        android:id="@+id/viewHeaderBg"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/blu_teal"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/topNavPill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_top_nav_rounded"
        android:orientation="horizontal"
        android:paddingHorizontal="4dp"
        android:paddingVertical="3dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tabTracker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_pill_white"
            android:text="Tracker"
            android:textStyle="bold"
            android:textSize="11sp"
            android:textColor="@color/blu_teal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="4dp"
            android:drawablePadding="4dp"
            app:drawableStartCompat="@drawable/logo7_foreground"
            app:drawableTint="@color/blu_teal"/>

        <TextView
            android:id="@+id/tabHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:layout_marginHorizontal="2dp"
            android:drawablePadding="4dp"
            app:drawableStartCompat="@android:drawable/ic_popup_sync" />

        <TextView
            android:id="@+id/tabPortfolio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Portfolio"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:drawablePadding="4dp"
            app:drawableStartCompat="@android:drawable/ic_menu_my_calendar" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvInitials"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_pill_white"
        android:backgroundTint="#80FFFFFF"
        android:gravity="center"
        android:text="GH"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topNavPill" />

    <TextView
        android:id="@+id/tvBadge"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/bg_pill_white"
        android:backgroundTint="#40FFFFFF"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:text="bluNewbie"
        android:textColor="@color/white"
        android:drawablePadding="4dp"
        app:drawableStartCompat="@drawable/motion_blur_2"
        app:layout_constraintBottom_toBottomOf="@id/tvInitials"
        app:layout_constraintStart_toEndOf="@id/tvInitials"
        app:layout_constraintTop_toTopOf="@id/tvInitials" />

    <LinearLayout
        android:id="@+id/toggleContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_pill_white"
        android:padding="4dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvInitials">

        <TextView
            android:id="@+id/toggleAkun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_pill_teal"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:text="AKUN"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/toggleKartu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:text="Kartu"
            android:textStyle="bold"
            android:textColor="@color/gray_text" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_bottom_sheet_top"
        android:paddingTop="24dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintTop_toBottomOf="@id/viewHeaderBg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:text="Analisis Keuangan Bulan Ini"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <FrameLayout
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="24dp">

                        <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:max="100"
                            android:progress="100"
                            android:progressDrawable="@drawable/circle_progress_hutang"
                            android:rotation="-90" />

                        <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:max="100"
                            android:progress="25"
                            android:progressDrawable="@drawable/circle_progress_uang_keluar"
                            android:rotation="162"
                            android:background="@android:color/transparent"/>

                        <ProgressBar
                            android:id="@+id/pbUangMasuk"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:max="100"
                            android:progress="70"
                            android:progressDrawable="@drawable/circle_progress_uang_masuk"
                            android:rotation="-90" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100%\nTotal"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/blu_teal"
                            android:gravity="center"
                            android:layout_gravity="center" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingHorizontal="4dp"
                        android:baselineAligned="false">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="Uang Masuk (70%)"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="Uang Keluar (25%)"
                                android:textColor="@color/colorOrange"
                                android:textStyle="bold"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="Hutang (5%)"
                                android:textColor="@color/purple_200"
                                android:textStyle="bold"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="-20dp"
        app:cardElevation="16dp"
        app:cardCornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blu_teal"
            android:paddingBottom="20dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/btnQR"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="35dp"
                app:cardElevation="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:src="@drawable/logo5_foreground"
                    app:tint="@color/blu_teal"
                    android:contentDescription="QR Code"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnQR"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/navTransaksi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:drawableTopCompat="@drawable/logo4_foreground"
                        app:drawableTint="@color/black" android:gravity="center"
                        android:text="Transaksi"
                        android:textColor="@color/white"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/navKeuangan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:drawableTopCompat="@drawable/logo3_foreground" app:drawableTint="@color/black" android:gravity="center"
                        android:text="Keuangan"
                        android:textColor="@color/white"
                        android:textSize="10sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnQR"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/navRiwayat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:drawableTopCompat="@drawable/logo1_foreground"
                        android:gravity="center"
                        android:text="Riwayat"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        app:drawableTint="@color/black" />
                    <TextView
                        android:id="@+id/navProfil"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:drawableTopCompat="@drawable/logo2_foreground"
                        android:gravity="center"
                        android:text="Profil"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        app:drawableTint="@color/black" />
                </LinearLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>