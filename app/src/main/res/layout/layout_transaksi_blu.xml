<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <!-- HEADER -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#00A5B5">

        <ImageView
            android:id="@+id/back"
            android:layout_width="33dp"
            android:layout_height="34dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_bca_digital_placeholder" />

        <TextView
            android:text="Transaksi"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"/>
    </RelativeLayout>

    <!-- CARD PUTIH BULAT -->
    <LinearLayout
        android:layout_below="@id/header"
        android:layout_marginTop="-30dp"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/bg_card_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp">

        <TextView
            android:text="Pindah Dana"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#1A1A1A"
            android:layout_marginBottom="18dp"/>

        <!-- INPUT JUMLAH -->
        <EditText
            android:id="@+id/input_jumlah"
            android:hint="Jumlah (min. Rp 10.000)"
            android:background="@drawable/bg_input_blu"
            android:padding="14dp"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>

        <!-- INPUT PILIH REKENING -->
        <Spinner
            android:id="@+id/spinner_rekening"
            android:layout_marginTop="14dp"
            android:background="@drawable/bg_input_blu"
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>

        <!-- BUTTON LANJUT -->
        <Button
            android:id="@+id/btn_lanjut"
            android:text="Lanjut"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_button_disabled"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>

    </LinearLayout>

</RelativeLayout>
