<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/keuangan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_primary">

    <!-- Header Background -->
    <View
        android:id="@+id/headerBg"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@color/teal_primary"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Avatar & Badge Container -->
    <LinearLayout
        android:id="@+id/profileContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvAvatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_circle_avatar"
            android:backgroundTint="#80FFFFFF"
            android:gravity="center"
            android:text="GH"
            android:textColor="@color/teal_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_pill_white"
            android:backgroundTint="@color/white"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp">

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/bg_avatar_circle"
                android:backgroundTint="@color/yellow_status" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="bluNewbie"
                android:textColor="@color/teal_primary"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Tab Switch -->
    <LinearLayout
        android:id="@+id/tabSwitch"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_pill_white"
        android:backgroundTint="@color/white"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="@id/profileContainer"
        app:layout_constraintTop_toBottomOf="@id/profileContainer">

        <TextView
            android:id="@+id/btnAkun"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_pill_white"
            android:backgroundTint="@color/teal_primary"
            android:gravity="center"
            android:text="AKUN"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btnKartu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Kartu"
            android:textColor="@color/text_gray"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Main Content Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardAnalysis"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tabSwitch"
        app:layout_constraintBottom_toTopOf="@id/bottomNavContainer">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Analisis Keuangan Bulan Ini"
                    android:textColor="@color/text_black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp"/>

                <!-- INTERACTIVE PIE CHART -->
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChart"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:layout_marginBottom="24dp"/>

                <!-- Legend Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Legend Item 1: Uang Masuk -->
                    <LinearLayout
                        android:id="@+id/legendUangMasuk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_avatar_circle"
                            android:backgroundTint="#E0F2F1">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@android:drawable/arrow_down_float"
                                app:tint="#00897B"/>
                        </FrameLayout>

                        <View
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginStart="12dp"
                            android:background="@drawable/bg_avatar_circle"
                            android:backgroundTint="@color/teal_primary"/>

                        <TextView
                            android:id="@+id/tvLegendUangMasuk"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Uang Masuk (70%)"
                            android:textColor="@color/text_black"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <!-- Legend Item 2: Uang Keluar -->
                    <LinearLayout
                        android:id="@+id/legendUangKeluar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:layout_marginTop="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_avatar_circle"
                            android:backgroundTint="#FFF3E0">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@android:drawable/ic_menu_upload"
                                app:tint="#FF6F00"/>
                        </FrameLayout>

                        <View
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginStart="12dp"
                            android:background="@drawable/bg_avatar_circle"
                            android:backgroundTint="#FF8A65"/>

                        <TextView
                            android:id="@+id/tvLegendUangKeluar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Uang Keluar (25%)"
                            android:textColor="@color/text_black"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <!-- Legend Item 3: Hutang -->
                    <LinearLayout
                        android:id="@+id/legendHutang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:layout_marginTop="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_avatar_circle"
                            android:backgroundTint="#FFFDE7">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@android:drawable/ic_menu_agenda"
                                app:tint="#F9A825"/>
                        </FrameLayout>

                        <View
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginStart="12dp"
                            android:background="@drawable/bg_avatar_circle"
                            android:backgroundTint="#FFD54F"/>

                        <TextView
                            android:id="@+id/tvLegendHutang"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Hutang (5%)"
                            android:textColor="@color/text_black"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

    <!-- Bottom Navigation sama seperti sebelumnya -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/bottomNavContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottomAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:backgroundTint="@color/teal_primary"
            app:fabCradleMargin="8dp"
            app:fabCradleRoundedCornerRadius="24dp"
            app:fabCradleVerticalOffset="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <LinearLayout
                    android:id="@+id/navTransaksi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/stat_sys_upload"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Transaksi"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/navKeuangan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_my_calendar"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Keuangan"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:id="@+id/navRiwayat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_recent_history"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Riwayat"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/navProfil"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Profil"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.bottomappbar.BottomAppBar>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_primary"
            android:src="@drawable/logo5_foreground"
            app:borderWidth="0dp"
            app:elevation="6dp"
            app:fabCustomSize="60dp"
            app:layout_anchor="@id/bottomAppBar"
            app:maxImageSize="32dp"
            app:tint="@color/white" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>